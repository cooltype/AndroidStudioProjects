<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lfrob.phone4.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/NUbutton"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New User"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:clickable="true" />

    <TextView
        android:id="@+id/errortext"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ErrorTextY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/NUbutton"
        android:layout_alignRight="@+id/NUbutton"
        android:layout_alignEnd="@+id/NUbutton" />

    <ListView
        android:id="@+id/BranchList"
        android:layout_below="@+id/errortext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/errortext"
        android:layout_alignLeft="@+id/errortext"
        />

    <EditText
        android:id="@+id/loginname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Login Name"
        android:layout_weight="1.0"
        android:layout_below="@+id/BranchList"
        android:layout_alignLeft="@+id/BranchList"
        android:layout_alignStart="@+id/BranchList" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_weight="1.0"
        android:ems="10"
         android:hint="Password"
        android:layout_below="@+id/loginname"
        android:layout_alignLeft="@+id/loginname"
        android:layout_alignStart="@+id/loginname" />

    <LinearLayout
        android:id="@+id/ButtonFrame"
        android:orientation="horizontal"
        android:background="@android:drawable/bottom_bar"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

    <Button
        android:id="@+id/okbutton"
        android:layout_weight="1.0"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/ButtonOK" />

    <Button
        android:id="@+id/cancelbutton"
        android:layout_weight="1.0"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/ButtonCancel"
        android:clickable="true" />

    </LinearLayout>

</RelativeLayout>
